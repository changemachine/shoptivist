{{#if addNewParentCompany}}
<h1>Add Parent Company</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="health_score">Health Score</label>
        {{input value=health_score id="health_score"}}
      </div>

      <div class="form-group">
        <label for="environment_score">Environment Score</label>
        {{input value=environment_score id="environment_score"}}
      </div>

      <div class="form-group">
        <label for="humaine_score">Humaine Score</label>
        {{input value=humaine_score id="humaine_score"}}
      </div>

      <button {{action 'saveParentCompany'}}>Save</button>
    </form>
  </div>
 {{else}}
    <button class="btn btn-success"{{action 'parentFormShow'}}>New Parent Company</button>
{{/if}}
