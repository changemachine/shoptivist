{{#if addNewCategory}}
<h1>Add Category</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Category</label>
        {{input value=name id="name"}}
      </div>
      <button {{action 'saveCategory'}}>Save</button>
    </form>
  </div>
 {{else}}
    <button class="btn btn-success"{{action 'categoryFormShow'}}>New Category</button>
{{/if}}
