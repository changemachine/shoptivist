<h1>Edit Company</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=company.name id="name"}}
    </div>

    <div class="form-group">
      <label for="health_score">Health Score</label>
      {{input value=company.health_score id="health_score"}}
    </div>

    <div class="form-group">
      <label for="environment_score">Environment Score</label>
      {{input value=company.environment_score id="environment_score"}}
    </div>

    <div class="form-group">
      <label for="humaine_score">Social Score</label>
      {{input value=company.social_score id="social_score"}}
    </div>

    <div class="form-group">
      <label for="Parent Company">Parent Company (optional)</label>
      {{input value=company.parent_company id="parent_company"}}
    </div>

    <button {{action 'updateCompany' company}}>Save</button>
  </form>
</div>
